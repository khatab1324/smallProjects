<% layout('layout/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      /* Reset default margin and padding */
      body,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p {
        margin: 0;
        padding: 0;
      }

      /* Set a background color and font for the whole page */
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
      }

      .container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      .user-info,
      .store-info {
        margin-bottom: 20px;
      }

      h3 {
        font-size: 1.2rem;
        margin-bottom: 10px;
      }

      label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
      }

      input[type="file"] {
        padding: 0;
        border: none;
        background-color: transparent;
      }

      .form-file-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
      }

      /* Style the submit button */
      button[type="submit"] {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
      }

      /* Add some responsiveness */
      @media screen and (max-width: 480px) {
        .container {
          padding: 10px;
        }
      }
    </style>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
      integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body>
    
    <div
      class="container w-25 d-flex justify-content-center align-items-center mt-5"
    >
      <form
        action="/create-store"
        method="POST"
        class="validated-form"
        enctype="multipart/form-data"
        novalidate
      >
        <div class="user-info">
          <h3>info about you this here bug mongose need email and username</h3>
          <div class="input-group mb-3">
            <span class="input-group-text" id="addon-wrapping">@</span>
            <input
              class="form-control"
              type="text"
              name="author"
              id="author"
              value="<%=author%>"
              placeholder="author"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="addon-wrapping">@</span>
            <input
              class="form-control"
              type="text"
              name="username"
              id="username"
              value="<%=author%>"
              placeholder="username"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="addon-wrapping">@</span>
            <input
              class="form-control"
              type="text"
              name="email"
              id="email"
             value="<%= user.email %>"
              placeholder="email"
            />
          </div>
          
          
        </div>
        <div class="store-info">
          <h3>info about your store</h3>
          <div class="input-group mb-3">
            <input
              class="form-control"
              type="text"
              name="title"
              id="title"
              placeholder="title"
            />
          </div>
          <div class="input-group mb-3">
            <input
              class="form-control"
              type="text"
              name="location"
              id="location"
              placeholder="enter your location if you have one"
            />
          </div>
          <div class="input-group mb-3">
            <input
              class="form-control"
              type="text"
              name="description"
              id="description"
              placeholder="description"
            />
          </div>
          <div class="mb-3">
            <div class="form-file custom-file">
              <input
                type="file"
                class="form-file-input"
                id="images"
                name="images"
                multiple
              />
              <label class="form-file-label" for="image">
                <span class="form-file-text custom-file-label"
                  >Choose image(s)...</span
                >
                <span class="form-file-button">Browse</span>
              </label>
            </div>
            </div>
        <button class="btn btn-outline-dark justify-content-md-end">
          bay 10$
        </button>
      </form>
    </div>
    <%-include("../partials/script")%>
  </body>
</html>
