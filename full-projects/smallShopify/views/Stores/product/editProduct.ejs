<% layout('layout/boilerplate') %>
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Marck+Script&family=Playfair+Display:ital,wght@1,500;1,700&display=swap"
  rel="stylesheet"
/>

<head>
  <style>
    .container {
      font-family: "Marck Script", cursive;
      font-family: "Playfair Display", serif;
    }
  </style>
</head>
<div class="container py-5">
  <div class="row mb-4">
    <div class="col-lg-8 mx-auto text-center">
      <h1 class="display-6">edit product</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <div class="row d-flex justify-content-center">
            <div class="col-sm-6 text-center">
                <form
                method="POST"
                action="/store/product/<%= product.id %>/edit"
                
               
              >
              <label for="title">
                <h6>title</h6>
              </label>
              <input
                type="text"
                name="title"
                value="<%= product.title %>"
                class="form-control"
                style="
                  border-left: none;
                  border-top: none;
                  border-right: none;
                  background-color: rgba(255, 255, 255, 0.01);
                  border-radius: 0;
                "
                placeholder="enter the new title"
                required
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-sm-6">
              <label for="quantity">
                <h6>quantity</h6>
              </label>
              <input
                type="number"
                placeholder="Enter the new quantity"
                name="quantity"
                id="quantity"
                class="form-control"
                value="<%= product.quantity %>"
                required
              />
            </div>
            <div class="col-sm-6">
              <div class="form-group mb-3">
                <label for="price">
                  <h6>price</h6>
                </label>
                <input
                  type="number"
                  id="price"
                  name="price"
                  placeholder="enter the new price"
                  value="<%= product.price %>"
                  class="form-control"
                  required
                />
              </div>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-sm-6">
              <label for="title">
                <h6>description</h6>
              </label>
              <input
                type="text"
                name="description"
                class="form-control mt-2"
                style="
                  border-left: none;
                  border-top: none;
                  border-right: none;
                  background-color: rgba(255, 255, 255, 0.01);
                  border-radius: 0;
                "
                value="<%= product.description %>"
                placeholder="enter the new title"
                required
              />
            </div>
          </div>
          <div class="row">
            <div class="mt-4 d-flex justify-content-center">
              
                <button class="subscribe btn btn-dark btn-block shadow-sm">
                  update product
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
